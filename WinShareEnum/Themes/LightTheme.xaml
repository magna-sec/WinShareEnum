<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette (Default Windows Colors) -->
    <Color x:Key="LightBackgroundColor">#FFFBFBFB</Color>
    <Color x:Key="LightSurfaceColor">#FFFFFF</Color>
    <Color x:Key="LightAccentColor">#FFE8E8E8</Color>
    <Color x:Key="LightTextColor">#FF000000</Color>
    <Color x:Key="LightSecondaryTextColor">#FF666666</Color>
    <Color x:Key="LightBorderColor">#FFD3D3D3</Color>
    <Color x:Key="LightHoverColor">#FFF0F0F0</Color>
    <Color x:Key="LightSelectedColor">#FF0078D4</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="LightSurfaceBrush" Color="{StaticResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="LightAccentBrush" Color="{StaticResource LightAccentColor}"/>
    <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightTextColor}"/>
    <SolidColorBrush x:Key="LightSecondaryTextBrush" Color="{StaticResource LightSecondaryTextColor}"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorderColor}"/>
    <SolidColorBrush x:Key="LightHoverBrush" Color="{StaticResource LightHoverColor}"/>
    <SolidColorBrush x:Key="LightSelectedBrush" Color="{StaticResource LightSelectedColor}"/>

    <!-- Light ListView Item Style for alternating rows (matches original) -->
    <Style x:Key="lightAlternatingListViewItemStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="Height" Value="30"/>
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                <Setter Property="Background" Value="#FFE8E8E8"/>
                <Setter Property="Foreground" Value="Black"/>
            </Trigger>
            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource LightSelectedBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Default styles for light theme (essentially resets to default) -->
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{StaticResource LightBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource LightSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>

    <Style TargetType="{x:Type PasswordBox}">
        <Setter Property="Background" Value="{StaticResource LightSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>

    <Style TargetType="{x:Type TreeView}">
        <Setter Property="Background" Value="{StaticResource LightSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>

    <Style TargetType="{x:Type ListView}">
        <Setter Property="Background" Value="{StaticResource LightSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="{StaticResource LightSurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

    <Style TargetType="{x:Type GroupBox}">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
    </Style>

</ResourceDictionary>