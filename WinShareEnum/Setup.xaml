<Window x:Class="WinShareEnum.setup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Share Enumerator - Setup" Height="450" Width="800" ResizeMode="NoResize"  
        Icon="pack://application:,,,/Resources/NCCG-Icon-[CMYK].ico" 
        Background="#FF2D2D30">
    <Window.Resources>
        <!-- Dark theme styles -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Background" Value="#FF383838"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF606060"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF606060"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF606060"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF505050"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF303030"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Left Column - Container for Domain and BloodHound -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
            <!-- Domain Setup -->
            <GroupBox x:Name="gb_domain_setup" Header="Domain Setup" Margin="0,0,0,10">
                <StackPanel Margin="15">
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                        <Label Content="Domain Name:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_domain_input1" Height="25" Width="200" TextChanged="OnDomainInputChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Label Content="Domain Controller:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_domain_input2" Height="25" Width="200" TextChanged="OnDomainInputChanged"/>
                    </StackPanel>
                    <CheckBox x:Name="cb_scan_workstations" Content="Scan Workstations" Margin="5,0,0,5" Checked="OnDomainInputChanged" Unchecked="OnDomainInputChanged"/>
                </StackPanel>
            </GroupBox>

            <!-- BloodHound Setup -->
            <GroupBox x:Name="gb_bloodhound_setup" Header="BloodHound Setup">
                <StackPanel Margin="15">
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                        <Label Content="Neo4j Bolt URI:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_neo4j_uri" Height="25" Width="200" TextChanged="OnBloodHoundInputChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Label Content="Neo4j Username:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_neo4j_username" Height="25" Width="200" TextChanged="OnBloodHoundInputChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Label Content="Neo4j Password:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="pb_neo4j_password" Height="25" Width="200" PasswordChanged="OnBloodHoundInputChanged"/>
                    </StackPanel>
                    <CheckBox x:Name="cb_bloodhound_enabled" Content="Scan Workstations" Margin="5,0,0,5" Checked="OnBloodHoundInputChanged" Unchecked="OnBloodHoundInputChanged"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Right Column - Container for IP Range and Authentication -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
            <!-- IP Range Setup -->
            <GroupBox x:Name="gb_iprange_setup" Header="IP Range Setup" Margin="0,0,0,10">
                <StackPanel Margin="15">
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                        <Label Content="IP Range:" FontWeight="Bold" Width="130" VerticalAlignment="Center"/>
                        <TextBox x:Name="tbIPRange" Height="25" Width="180" TextChanged="OnIPRangeInputChanged"/>
                    </StackPanel>
                    <CheckBox x:Name="cb_netbios_lookup" Content="Look up NETBIOS name via SMB" Margin="5,0,0,5" Checked="OnIPRangeInputChanged" Unchecked="OnIPRangeInputChanged"/>
                </StackPanel>
            </GroupBox>

            <!-- Authentication -->
            <GroupBox x:Name="gb_auth_setup" Header="Authentication">
                <StackPanel Margin="15">
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <Label Content="Username:" FontWeight="Bold" Width="130" VerticalAlignment="Center"/>
                        <TextBox x:Name="tb_auth_username" Height="25" Width="180" TextChanged="OnAuthInputChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Password:" FontWeight="Bold" Width="130" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="pb_auth_password" Height="25" Width="180" PasswordChanged="OnAuthInputChanged"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Bottom buttons -->
        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="Cancel" Width="75" Height="30" Margin="0,0,10,0"/>
            <Button Content="OK" Width="75" Height="30"/>
        </StackPanel>
    </Grid>
</Window>